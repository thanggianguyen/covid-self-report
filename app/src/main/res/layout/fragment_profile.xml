<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/profilefragment_initials_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_background_circle"
        android:gravity="center"
        android:text=""
        android:textSize="48sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/profilefragment_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#808080"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/profilefragment_initials_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/profilefragment_phonenumber_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#808080"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/profilefragment_name_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/profilefragment_change_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="@string/profile_edit_profile_button_text"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@+id/profilefragment_phonenumber_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/profilefragment_change_profile_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_change_profile_button"
        app:layout_constraintEnd_toStartOf="@+id/profilefragment_change_profile_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_change_profile_button"
        />

    <ImageView
        android:id="@+id/profilefragment_change_profile_open_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_change_profile_button"
        app:layout_constraintStart_toEndOf="@+id/profilefragment_change_profile_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_change_profile_button"
        />

    <Button
        android:id="@+id/profilefragment_notifications_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/profile_notifications_button_text"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilefragment_change_profile_button" />

    <ImageView
        android:id="@+id/profilefragment_notifications_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_notifications_button"
        app:layout_constraintEnd_toStartOf="@+id/profilefragment_notifications_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_notifications_button"
        />

    <ImageView
        android:id="@+id/profilefragment_notifications_open_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_notifications_button"
        app:layout_constraintStart_toEndOf="@+id/profilefragment_notifications_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_notifications_button"
        />

    <Button
        android:id="@+id/profilefragment_share_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:text="@string/profile_share_profile_button_text"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@+id/profilefragment_notifications_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/profilefragment_share_profile_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_share_profile_button"
        app:layout_constraintEnd_toStartOf="@+id/profilefragment_share_profile_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_share_profile_button"
        />

    <ImageView
        android:id="@+id/profilefragment_share_profile_open_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/profilefragment_share_profile_button"
        app:layout_constraintStart_toEndOf="@+id/profilefragment_share_profile_button"
        app:layout_constraintBottom_toBottomOf="@+id/profilefragment_share_profile_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>