<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.datingconsent.profileresources.ProfileCreatorFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Each field will have four components
            - EditText
            - Change Button
            - Invalid Message TextView
            - ImageView checkmark
        -->
            <TextView
                android:id="@+id/profile_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profile_title_textview_text"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/profile_name_edittext"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/profile_name_text"
                android:maxLength="40"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_title_textview" />

            <ImageView
                android:id="@+id/profile_checkmark_name_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_name_edittext"
                app:layout_constraintEnd_toStartOf="@+id/profile_name_edittext"
                app:layout_constraintTop_toTopOf="@+id/profile_name_edittext" />

            <TextView
                android:id="@+id/profile_invalid_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_invalid_name_textview_text"
                android:textColor="@color/design_default_color_error"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/profile_name_edittext"
                app:layout_constraintTop_toBottomOf="@+id/profile_name_edittext" />

            <Button
                android:id="@+id/profile_change_name_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_change_button_text"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_name_edittext"
                app:layout_constraintStart_toEndOf="@+id/profile_name_edittext"
                app:layout_constraintTop_toTopOf="@+id/profile_name_edittext" />

            <EditText
                android:id="@+id/profile_phone_number_edittext"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text_background"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="20"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/profile_name_edittext"
                app:layout_constraintTop_toBottomOf="@+id/profile_name_edittext" />

            <ImageView
                android:id="@+id/profile_checkmark_phone_number_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_phone_number_edittext"
                app:layout_constraintEnd_toStartOf="@+id/profile_phone_number_edittext"
                app:layout_constraintTop_toTopOf="@+id/profile_phone_number_edittext" />

            <TextView
                android:id="@+id/profile_invalid_phone_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_invalid_phone_number_textview_text"
                android:textColor="@color/design_default_color_error"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/profile_phone_number_edittext"
                app:layout_constraintTop_toBottomOf="@+id/profile_phone_number_edittext" />

            <Button
                android:id="@+id/profile_change_phone_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_change_button_text"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_phone_number_edittext"
                app:layout_constraintStart_toEndOf="@+id/profile_phone_number_edittext"
                app:layout_constraintTop_toTopOf="@+id/profile_phone_number_edittext" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_phone_number_edittext" />

            <Button
                android:id="@+id/profile_change_gender_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_change_button_text"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/gender_spinner"
                app:layout_constraintStart_toEndOf="@+id/gender_spinner"
                app:layout_constraintTop_toTopOf="@+id/gender_spinner" />


            <Button
                android:id="@+id/profile_create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/profile_create_button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gender_spinner" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>